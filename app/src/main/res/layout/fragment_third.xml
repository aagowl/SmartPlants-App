<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThirdFragment"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="310dp"
        android:fillViewport="true"
        android:orientation="vertical"
        tools:context=".ThirdFragment">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/graph_title_height"
            android:orientation="horizontal"
            tools:context=".ThirdFragment">

        <!--text view for displaying heading-->
        <TextView
            android:id="@+id/idTVHeadWellness"
            android:layout_width="@dimen/graph_width"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/graph_horizontal_margin"
            android:gravity="center"

            android:textAlignment="center"
            android:textColor="@color/blue"
            android:textSize="@dimen/graph_text_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/idTVHeadPlant"
            android:layout_width="@dimen/graph_width"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/graph_horizontal_margin"
            android:gravity="center"
            android:text="@string/Graph_two"
            android:textAlignment="center"
            android:textColor="@color/green"
            android:textSize="@dimen/graph_text_size"
            android:textStyle="bold" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/graph_title_height"
            android:orientation="horizontal"
            tools:context=".ThirdFragment">

        <!--line graph view where we will
            be displaying our data-->
        <com.jjoe64.graphview.GraphView
            android:id="@+id/idGraphViewWellness"
            android:layout_width="@dimen/graph_width"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/graph_horizontal_margin"
            android:layout_below="@id/idTVHeadWellness" />

        <com.jjoe64.graphview.GraphView
            android:id="@+id/idGraphViewPlant"
            android:layout_width="@dimen/graph_width"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/graph_horizontal_margin"
            android:layout_below="@id/idTVHeadPlant" />
        </LinearLayout>

        <TextView
            android:id="@+id/xAxis"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="285dp"
            android:layout_marginHorizontal="5dp"
            android:gravity="center"
            android:layout_weight="1"
            android:text="Mon Tues Wed Thurs Fri Sat Sun         Mon Tues Wed Thurs Fri Sat Sun"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:backgroundTint="@color/blue"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="350dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/question_descriptor_text"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/question_top_margin"
                android:text="@string/Question_descriptor" />

            <TextView
                android:id="@+id/question_one"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/question_top_margin"
                android:layout_gravity="center"
                android:text="@string/Question_one" />

            <SeekBar
                android:id="@+id/seekBar_one"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:max="10"
                android:padding="@dimen/Seek_Bar_padding"
                android:progress="5" />

            <TextView
                android:id="@+id/question_two"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/question_top_margin"
                android:layout_gravity="center"
                android:text="@string/Question_two" />

            <SeekBar
                android:id="@+id/seekBar_two"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:max="10"
                android:padding="@dimen/Seek_Bar_padding"
                android:progress="5" />

            <TextView
                android:id="@+id/question_three"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/question_top_margin"
                android:layout_gravity="center"
                android:text="@string/Question_three" />

            <SeekBar
                android:id="@+id/seekBar_three"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:max="10"
                android:padding="@dimen/Seek_Bar_padding"
                android:progress="5" />

            <TextView
                android:id="@+id/question_four"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/question_top_margin"
                android:layout_gravity="center"
                android:text="@string/Question_four" />

            <SeekBar
                android:id="@+id/seekBar_four"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:max="10"
                android:padding="@dimen/Seek_Bar_padding"
                android:progress="5" />

            <TextView
                android:id="@+id/question_five"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/question_top_margin"
                android:layout_gravity="center"
                android:text="@string/Question_five" />

            <SeekBar
                android:id="@+id/seekBar_five"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:max="10"
                android:padding="@dimen/Seek_Bar_padding"
                android:progress="5" />

            <TextView
                android:id="@+id/question_six"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/question_top_margin"
                android:layout_gravity="center"
                android:text="@string/Question_six" />

            <SeekBar
                android:id="@+id/seekBar_six"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:max="10"
                android:padding="@dimen/Seek_Bar_padding"
                android:progress="5" />

            <TextView
                android:id="@+id/question_seven"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/question_top_margin"
                android:layout_gravity="center"
                android:text="@string/Question_seven" />

            <SeekBar
                android:id="@+id/seekBar_seven"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:max="10"
                android:padding="@dimen/Seek_Bar_padding"
                android:progress="5" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="1dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/track_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:text="@string/track" />

    </LinearLayout>

</LinearLayout>
