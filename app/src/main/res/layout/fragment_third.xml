<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstFragment"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <!--text view for displaying heading-->
        <TextView
            android:id="@+id/idTVHead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:gravity="center"
            android:padding="4dp"
            android:text="@string/app_name"
            android:textAlignment="center"
            android:textColor="@color/pink"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!--line graph view where we will
            be displaying our data-->
        <com.jjoe64.graphview.GraphView
            android:id="@+id/idGraphView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/idTVHead" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="350dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/question_descriptor_text"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/question_top_margin"
                android:text="@string/Question_descriptor" />

            <TextView
                android:id="@+id/question_one"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/question_top_margin"
                android:layout_gravity="center"
                android:text="@string/Question_one" />

            <SeekBar
                android:id="@+id/seekBar_one"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:max="10"
                android:padding="@dimen/Seek_Bar_padding"
                android:progress="5" />

            <TextView
                android:id="@+id/question_two"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/question_top_margin"
                android:layout_gravity="center"
                android:text="@string/Question_two" />

            <SeekBar
                android:id="@+id/seekBar_two"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:max="10"
                android:padding="@dimen/Seek_Bar_padding"
                android:progress="5" />

            <TextView
                android:id="@+id/question_three"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/question_top_margin"
                android:layout_gravity="center"
                android:text="@string/Question_three" />

            <SeekBar
                android:id="@+id/seekBar_three"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:max="10"
                android:padding="@dimen/Seek_Bar_padding"
                android:progress="5" />

            <TextView
                android:id="@+id/question_four"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/question_top_margin"
                android:layout_gravity="center"
                android:text="@string/Question_four" />

            <SeekBar
                android:id="@+id/seekBar_four"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:max="10"
                android:padding="@dimen/Seek_Bar_padding"
                android:progress="5" />

            <TextView
                android:id="@+id/question_five"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/question_top_margin"
                android:layout_gravity="center"
                android:text="@string/Question_five" />

            <SeekBar
                android:id="@+id/seekBar_five"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:max="10"
                android:padding="@dimen/Seek_Bar_padding"
                android:progress="5" />

            <TextView
                android:id="@+id/question_six"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/question_top_margin"
                android:layout_gravity="center"
                android:text="@string/Question_six" />

            <SeekBar
                android:id="@+id/seekBar_six"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:max="10"
                android:padding="@dimen/Seek_Bar_padding"
                android:progress="5" />

            <TextView
                android:id="@+id/question_seven"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/question_top_margin"
                android:layout_gravity="center"
                android:text="@string/Question_seven" />

            <SeekBar
                android:id="@+id/seekBar_seven"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:max="10"
                android:padding="@dimen/Seek_Bar_padding"
                android:progress="5" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/track_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="@string/track" />

    </LinearLayout>

</LinearLayout>
