<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstFragment"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:padding="30dp"
        android:src="@tools:sample/avatars"
        tools:src="@drawable/plant_cropped" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="@dimen/title_text_size"
        android:text="@string/user_greeting"
        android:layout_gravity="center"
        android:background="@color/white"
        android:textColor="@color/black"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <Button
            android:id="@+id/button_first"
            style="@style/PrimaryColoredButton"
            android:layout_marginHorizontal="@dimen/button_horizontal_margin"
            android:layout_marginVertical="@dimen/button_vertical_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Connect" />

        <Button
            android:id="@+id/button_second"
            android:layout_marginHorizontal="@dimen/button_horizontal_margin"
            android:layout_marginVertical="@dimen/button_vertical_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Connect" />

        <Button
            android:id="@+id/button_third"
            android:layout_marginHorizontal="@dimen/button_horizontal_margin"
            android:layout_marginVertical="@dimen/button_vertical_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/check_in" />
    </LinearLayout>


    <ProgressBar
        android:id="@+id/determinateBar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:progressTint="@color/blue"
        android:progressBackgroundTint="@color/grey"
        android:progress="5"/>

    <ProgressBar
        android:id="@+id/progressBarWater"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:progressTint="@color/yellow"
        android:progressBackgroundTint="@color/grey"
        android:progress="5"/>

    <ProgressBar
        android:id="@+id/progressBarSolar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:progressTint="@color/pink"
        android:progressBackgroundTint="@color/grey"
        android:progress="5"/>

</LinearLayout>