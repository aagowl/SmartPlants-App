<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:padding="30dp"
        tools:src="@drawable/plant_cropped"
        android:contentDescription="@string/plant_pfp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="@dimen/title_text_size"
        android:text="@string/user_greeting"
        android:layout_gravity="center"
        android:background="@color/white"
        android:textColor="@color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <Button
            android:id="@+id/button_first"
            style="@style/PrimaryColoredButton"
            android:layout_marginHorizontal="@dimen/button_horizontal_margin"
            android:layout_marginVertical="@dimen/button_vertical_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Connect" />

        <Button
            android:id="@+id/button_second"
            style="@style/PrimaryColoredButton"
            android:layout_marginHorizontal="@dimen/button_horizontal_margin"
            android:layout_marginVertical="@dimen/button_vertical_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/share" />

        <Button
            android:id="@+id/button_third"
            style="@style/PrimaryColoredButton"
            android:layout_marginHorizontal="@dimen/button_horizontal_margin"
            android:layout_marginVertical="@dimen/button_vertical_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/check_in" />
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="@string/waterProgressBar" />

    <ProgressBar
        android:id="@+id/progressBarWater"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:progressTint="@color/blue"
        android:progressBackgroundTint="@color/grey"
        android:progress="5"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="@string/sunProgressBar" />

    <ProgressBar
        android:id="@+id/progressBarSolar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:progressTint="@color/yellow"
        android:progressBackgroundTint="@color/grey"
        android:progress="5"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:text="@string/levelProgressBar" />

        <TextView
            android:id="@+id/textLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="275dp"
            android:layout_weight="1"
            android:text="@string/levelProgressBarXp" />

        <TextView
            android:id="@+id/textXP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:textStyle="bold"/>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBarLevel"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:progressTint="@color/pink"
        android:progressBackgroundTint="@color/grey"/>

</LinearLayout>